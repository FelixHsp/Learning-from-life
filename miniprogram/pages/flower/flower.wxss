/* pages/flower/flower.wxss */

page {
  font-family:PingFangSC-Regular;
  background-color: #eee;
}

#father {
  position: relative;
}

#showTime {
  display: block;
  font-family: PingFangSC-Regular;
  font-size: 50px;
  text-align: center;
}

#mask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  margin-top: 30%;
}

#content {
  width: 80%;
  height: 50%;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

#img {
  position: relative;
}

#img image {
  height: 60px;
  width: 30%;
  position: relative;
  top: 10px;
  margin-bottom: 25px;
  /* background-color: rgb(177, 172, 172);
  opacity: 0.3 */
}

#main .flowers {
  width: 120px;
  height: 220px;
  position: relative;
  left: 50%;
  transform: translateX(-50%)
}

#headWord .word{
  display: block;
  text-align: center;
  font-size: 25px;
}

#time .shengyushijian{
  display: block;
  text-align: center;
  font-size: 25px;
}

#img .chose{
  background-color: rgb(177, 172, 172);
  opacity: 0.3
}
