page {
  background-color: #eee;
}

#father {
  position: relative;
}

#main {
  /* display: none; */
}

#showTime {
  display: block;
  font-family: PingFangSC-Regular;
  font-size: 50px;
  text-align: center;
}

#mask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  margin-top: 30% 
}

#content {
  width: 80%;
  height: 50%;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}

#img {
  position: relative;
}

#img image {
height: 60px;
  width: 30%;
  position: relative;
  top: 10px;
  margin-bottom: 25px;
}
