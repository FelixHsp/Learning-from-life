page{
  background-color: #eee;
  height: 100%;
  width: 100%;
  font-family: PingFangSC-Regular;
}
#module{
  background-color: #99CC99;
  height: 25%;
  width: 90%;
  margin: 0 auto;
  font-size: 12px;
  border-radius: 10px;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
  position: relative;
}
.add{
  display: flex;
  height: 70px;
}
.add-img{
  display: flex;
  height: 100rpx;
  width: 100rpx;
  margin: 0 auto;
}
.time{
  color: #fff;
  position: relative;
  width: 100%;
  top: 10px;
  /* margin: 0 auto; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}
.time text{
  /* display: flex;
  flex-direction: column;
