
#background{
  width: 100%;
  height: 150px;
  background-color: #99CC99;
  border-radius: 0 0 35px 35px;
  position: relative;
}
#background image:nth-child(1){
  width: 40px;
  height: 40px;
  position: absolute;
  top: 100%;
  left: 5%;
  transform: translate(0%,-100%) rotateZ(-20deg);
}
#background image:nth-child(2){
  width: 40px;
  height: 40px;
  position: absolute;
  top: 100%;
  left: 30%;
  transform: translate(0,-100%) rotateZ(20deg);
}
#background image:nth-child(3){
  width: 40px;
  height: 40px;
  position: absolute;
  top: 100%;
  left: 58%;
  transform: translate(0,-100%) rotateZ(-30deg);
}
#background image:nth-child(4){
  width: 40px;
  height: 40px;
  position: absolute;
  top: 100%;
  left: 84%;
  transform: translate(0,-100%) rotateZ(20deg);
}
#background image:nth-child(5){
  width: 40px;
  height: 40px;
  position: absolute;
  top: 25%;
  left: 5%;
  transform: translate(0,-100%) rotateZ(20deg);
}
#background image:nth-child(6){
  width: 30px;
  height: 30px;
  position: absolute;
  top: 60%;
  left: 5%;
  transform: translate(0,-100%) rotateZ(20deg);
}
#date{
  color: white;
  font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: 24px;
  position: absolute;
  left: 100%;
  transform: translate(-130%,0);
}
#date .mou{
  position: absolute;
  /* left: 100%; */
  /* transform: translate(-100%,0) */
}
#date .day{
  position: absolute;
  left: 100%;
  transform: translate(-100%,100%)
}
#date .md{
  position: absolute;
  left: 50%;
  transform: translate(-50%,50%)
}
#content{
  color: white;
  font-family:PingFangSC-Regular;
  position: absolute;
  left: 50%;
  top: 50%;
  font-size: 20px;
  transform: translate(-50%,-100%);
}
#room-type{
  position: relative;
  width: 100%;
  top: 10px;
  font-family: PingFangSC-Regular;
}
#room-type .text{
  font-size: 14px;
  position: absolute;
  left: 20px;
  color: #999;
}
#room-type .type image{
  width: 30px;
  height: 30px;
  position: absolute;
  left: 80%;
  transform: translate(-100%,-20%);
}
#room-type .type image:nth-child(2){
  transform: translate(-100%,100%);
}
#room-type .type{
  font-size: 10px;
  color: #999;
}
#room-type .type .one{
  position: absolute;
  left: 90%;
  transform: translate(-100%,-20%);
}
#room-type .type .two{
  position: absolute;
  left: 90%;
  transform: translate(-100%,100%);
}
#room{
  position: relative;
}
#room image{
  height: 60px;
  width: 60px;
  position: relative;
  top: 90px;
  margin-left: 13%;
  margin-bottom: 25px;
}