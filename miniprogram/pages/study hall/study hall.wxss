#background{
  width: 100%;
  height: 150px;
  background-color: #99CC99;
  border-radius: 0 0 35px 35px;
  position: relative;
}
#background image:nth-child(1){
  width: 40px;
  height: 40px;
  position: absolute;
  top: 100%;
  left: 5%;
  transform: translate(0%,-100%) rotateZ(-20deg);
}
#background image:nth-child(2){
  width: 40px;
  height: 40px;
  position: absolute;
  top: 100%;
  left: 30%;
  transform: translate(0,-100%) rotateZ(20deg);
}
#background image:nth-child(3){
  width: 40px;
  height: 40px;
  position: absolute;
  top: 100%;
  left: 58%;
  transform: translate(0,-100%) rotateZ(-30deg);
}
#background image:nth-child(4){
  width: 40px;
  height: 40px;
  position: absolute;
  top: 100%;
  left: 84%;
  transform: translate(0,-100%) rotateZ(20deg);
}
#date{
  color: white;
  font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: 24px;
  position: absolute;
  left: 100%;
